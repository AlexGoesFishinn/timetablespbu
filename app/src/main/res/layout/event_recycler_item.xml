<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    >
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="10dp"
        app:strokeColor="@color/spbu_primary_terracot_color"
        app:strokeWidth="1dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/eventTimeLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"

                >

                <ImageView
                    android:id="@+id/eventTimeIcon"
                    android:layout_width="16sp"
                    android:layout_height="16sp"
                    android:foregroundGravity="left"
                    android:src="@drawable/ic_time"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="16dp"
                    />

                <TextView
                    android:id="@+id/eventTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/eventTimeIcon"
                    android:gravity="center_horizontal"
                    android:textSize="16sp"
                    tools:text="12:00"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/eventNameLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/eventTimeLine"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/eventNameIcon"
                    android:layout_width="16sp"
                    android:layout_height="16sp"
                    android:foregroundGravity="left"
                    android:src="@drawable/ic_event"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="16dp"
                    />


                <TextView
                    android:id="@+id/eventName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/eventNameIcon"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:gravity="center_horizontal"
                    tools:text="Лекция по зельеварению"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/eventSubgroupLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/eventNameLine"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/eventSubgroupIcon"
                    android:src="@drawable/ic_subgroup"
                    android:layout_width="16sp"
                    android:layout_height="16sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:foregroundGravity="left"
                    android:layout_marginStart="16dp"/>

                <TextView
                    android:id="@+id/eventSubgroup"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/eventSubgroupIcon"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:gravity="center_horizontal"
                    tools:text="Подгруппа"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/eventPlaceLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/eventSubgroupLine"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/eventPlaceIcon"
                    android:src="@drawable/ic_location"
                    android:layout_width="16sp"
                    android:layout_height="16sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:foregroundGravity="left"
                    android:layout_marginStart="16dp"/>

                <TextView
                    android:id="@+id/eventPlace"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/eventPlaceIcon"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="Хогвартс"
                    android:textSize="16sp"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/eventEducatorLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/eventPlaceLine"
                android:layout_marginTop="8dp"
                >

                <ImageView
                    android:id="@+id/eventEducatorIcon"
                    android:src="@drawable/ic_educator"
                    android:layout_width="16sp"
                    android:layout_height="16sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:foregroundGravity="left"
                    android:layout_marginStart="16dp"/>

                <TextView
                    android:id="@+id/eventLecturer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/eventEducatorIcon"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:gravity="center_horizontal"
                    tools:text="Профессор Снейп"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
    



</androidx.constraintlayout.widget.ConstraintLayout>